<?xml version="1.0" encoding="UTF-8"?>
<Context path="/Lab07_JDBC" >
    <Resource
        name="jdbc/userdb"
        url="jdbc:mysql://localhost:3306/userdb"
        username="root"
        password="password"
        maxActive="100"
        maxIdle="30"
        maxWait="10000"
        logAbandoned="true"
        removeAbandoned="true"
        removeAbandonedTimeout="60"
        auth="Container"
        type="javax.sql.DataSource"
        driverClassName="com.mysql.jdbc.Driver"
    />
</Context>
